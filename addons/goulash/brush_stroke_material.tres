code = "shader_type canvas_item;
render_mode unshaded;

uniform sampler2D screen_texture : hint_screen_texture, repeat_disable, filter_nearest;
varying vec4 modulate;

global uniform sampler2D goulash_boil_noise : repeat_enable;
global uniform float goulash_frame;

void vertex() {
	modulate = COLOR;
}

void fragment() {
	COLOR.rgb = modulate.rgb;
	float a = 0.0;
	
	vec2 uv = SCREEN_UV;
	
	vec2 noise_uv = UV / 6.0;
	
	float frame = floor(goulash_frame / 4.0);
	noise_uv += vec2(frame * 0.1, frame * PI);
	uv += (texture(goulash_boil_noise, noise_uv).rg - 0.5) * 0.004;
	
	// some kind of anti-alias, but expensive ðŸ’¸
	a += texture(screen_texture, SCREEN_UV).r * 2.0;
	for (float i = 0.0; i < 1.0; i += 1.0 / 5.0) {
		a += texture(screen_texture, uv + vec2(sin(i * TAU), cos(i * TAU)) * 2.0 * SCREEN_PIXEL_SIZE).r;
		a += texture(screen_texture, uv + vec2(sin(i * TAU), cos(i * TAU)) * 1.0 * SCREEN_PIXEL_SIZE).r;
	}
	a = smoothstep(0.2, 0.6, a / 12.0);
	
	COLOR.a = a * modulate.a;
}"
